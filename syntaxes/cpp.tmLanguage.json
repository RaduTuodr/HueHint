{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "C++",
	"scopeName": "source.cpp",
	"patterns": [
	  {
		"include": "#keywords"
	  },
	  {
		"include": "#strings"
	  },
	  {
		"name": "comment.line.double-slash.alert.cpp",
		"match": "^\\s*//!.*$"
	  },
	  {
		"name": "comment.line.double-slash.question.cpp",
		"match": "^\\s*//\\?.*$"
	  },
	  {
		"name": "comment.line.double-slash.silent.cpp",
		"match": "^\\s*//\\..*$"
	  },
	  {
		"name": "comment.line.double-slash.note.cpp",
		"match": "^\\s*//\\+.*$"
	  },
	  {
		"name": "comment.line.double-slash.insight.cpp",
		"match": "^\\s*//\\~.*$"
	  },
	  {
		"name": "comment.line.double-slash.todo.cpp",
		"match": "^\\s*// TODO.*$"
	  }
	],
	"repository": {
	  "keywords": {
		"patterns": [
		  {
			"name": "keyword.control.cpp",
			"match": "\\b(if|while|for|return)\\b"
		  }
		]
	  },
	  "strings": {
		"name": "string.quoted.double.cpp",
		"begin": "\"",
		"end": "\"",
		"patterns": [
		  {
			"name": "constant.character.escape.cpp",
			"match": "\\\\."
		  }
		]
	  }
	}
  }
  